<?xml version="1.0" encoding="UTF-8"?>
<!--
	<h3>Coordinador de emergencias.</h3>

	Agente que coordina lo que ocurre en la residencia.
-->
<agent xmlns="http://jadex.sourceforge.net/jadex" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://jadex.sourceforge.net/jadex http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"	
		name="Coordinador" package="disasters.caronte.coordinador">
	<imports>
		<import>disasters.Position</import>
		<import>disasters.caronte.Entorno</import>
		<import>jadex.base.fipa.IDF</import>
		<import>jadex.base.fipa.SFipa</import>
		<import>jadex.bdi.planlib.protocols.request.Request</import>
		<import>jadex.bdi.planlib.df.DF</import>
		<import>jadex.bridge.service.RequiredServiceInfo</import>
		<import>jadex.bridge.service.SServiceProvider</import>
		<import>jadex.commons.future.IFuture</import>
	</imports>

	<capabilities>
		<capability name="procap" file="jadex.bdi.planlib.protocols.request.Request"/>
		<capability name="dfcap" file="jadex.bdi.planlib.df.DF"/>
	</capabilities>

	<beliefs>
		<belief name="env" class="Entorno">
			<fact>Entorno.getInstance(Entorno.COORDINADOR, $scope.getAgentName(), $beliefbase.residencia)</fact>
		</belief>
		<belief name="residencia" class="Position">
			<fact>new Position(38.232272, -1.698925)</fact>
		</belief>
		<belief name="idJefeIntervencion" class="Integer">
			<fact>0</fact>
		</belief>
		<belief name="desastreActual" class="Integer">
			<fact>0</fact>
		</belief>
	</beliefs>

	<goals>
		<achievegoalref name="rp_initiate">
			<concrete ref="procap.rp_initiate"/>
		</achievegoalref>
		<achievegoalref name="df_search">
			<concrete ref="dfcap.df_search"/>
		</achievegoalref>
		<achievegoalref name="df_register">
			<concrete ref="dfcap.df_keep_registered"/>
		</achievegoalref>
		<achievegoalref name="df_deregister">
			<concrete ref="dfcap.df_deregister"/>
		</achievegoalref>
		<performgoal name="encontrarEmergencia" retry="true" exclude="never"/>
		<achievegoal name="avisarAgentes"/>
	</goals>

	<plans>
		<plan name="encontrarEmergencia-plan">
			<body class="EncontrarEmergenciaPlan"/>
			<trigger>
				<goal ref="encontrarEmergencia"/>
			</trigger>
		</plan>
		<plan name="avisarAgentes-plan">
			<body class="AvisarAgentesPlan"/>
			<trigger>
				<goal ref="avisarAgentes"/>
			</trigger>
		</plan>
	</plans>

	<events>
		<messageevent name="atenderIncendio" direction="send" type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.REQUEST</value>
			</parameter>
		</messageevent>
		<messageevent name="ack_atenderIncendio" direction="receive" type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.INFORM</value>
			</parameter>
			<match>$content instanceof String &amp;&amp; ((String)$content).startsWith("ack_atenderIncendio")</match>
		</messageevent>
		
		<messageevent name="atenderHerido" direction="send" type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.REQUEST</value>
			</parameter>
		</messageevent>
		<messageevent name="ack_atenderHerido" direction="receive" type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.INFORM</value>
			</parameter>
			<match>$content instanceof String &amp;&amp; ((String)$content).startsWith("ack_atenderHerido")</match>
		</messageevent>
		
		<!-- Ejemplo
		<messageevent name="nombre/ack_nombre" direction="send/receive" type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.REQUEST/SFipa.INFORM</value>
			</parameter>
			<parameter name="language" class="String" direction="fixed">
				<value>SFipa.JADEX_XML</value>
 			</parameter>
			<parameter name="ontology" class="String" direction="fixed">
				<value>CaronteOntology.ONTOLOGY_NAME</value>
			</parameter>
			<match>$content instanceof String &amp;&amp; ((String)$content).startsWith("nombre/ack_nombre")</match>
		</messageevent>-->
	</events>

	<properties>
		<property name="dfservice" class="IFuture">SServiceProvider.getService($scope.getServiceProvider(), IDF.class, RequiredServiceInfo.SCOPE_PLATFORM)</property>
	</properties>

	<configurations>
		<configuration name="default">
			<goals>
				<initialgoal ref="df_register">
					<parameter ref="description">
						<value>
							$properties.dfservice.createDFComponentDescription(null,
								$properties.dfservice.createDFServiceDescription("coordinador-service", Entorno.COORDINADOR, "GSI DIT UPM"))
 						</value>
					</parameter>
				</initialgoal>
				<initialgoal ref="encontrarEmergencia"/>
				<endgoal ref="df_deregister"/>
			</goals>
		</configuration>
	</configurations>
</agent>