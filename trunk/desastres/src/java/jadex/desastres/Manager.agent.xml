<!--
	<H3>Agente manager.</H3>

	Usado para lanzar el escenario y los agentes
	ambulancias que consideremos.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex-bdi"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                       http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
       name="Manager"
	   package="jadex.desastres">

	<imports>
		<import>jadex.*</import>
		<import>jadex.bdi.planlib.*</import>
		<import>java.util.logging.*</import>
		<import>jadex.bdi.planlib.cms.*</import>
	</imports>

	<capabilities>
		<capability name="cmscap" file="CMS"/>
	</capabilities>

	<goals>
		<!-- Objetivo usado para crear el manager -->
		<achievegoalref name="cms_create_component">
			<concrete ref="cmscap.cms_create_component"/>
		</achievegoalref>

		<!-- Objetivo usado para destruir el manager -->
		<achievegoalref name="cms_destroy_component">
			<concrete ref="cmscap.cms_destroy_component"/>
		</achievegoalref>

		<performgoal name="managerGoal"/>
	</goals>

	<plans>
		<plan name="managerPlan">
			<body class="ManagerPlan"/>
			<trigger>
				<goal ref="managerGoal"/>
			</trigger>
		</plan>
	</plans>

	<configurations>
		<configuration name="default">
			<goals>
				<initialgoal ref="managerGoal"/>
			</goals>
		</configuration>
	</configurations>

</agent>
