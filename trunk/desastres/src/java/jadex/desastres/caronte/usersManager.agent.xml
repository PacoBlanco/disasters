<!--
	<h3>Agente que controla los usuarios</h3>
-->
<agent xmlns="http://jadex.sourceforge.net/jadex" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	name="usersManager" package="jadex.desastres.caronte">

	<imports>
		<import>jadex.bdi.planlib.*</import>
		<import>jadex.bdi.planlib.cms.*</import>
		<import>jadex.desastres.*</import>
		<import>java.util.*</import>
		<import>java.util.logging.*</import>
	</imports>

	<capabilities>
		<capability name="cmscap" file="CMS"/>
	</capabilities>

	<beliefs>
		<!-- Creamos el agente como instancia del Entorno. Por defecto, en la residencia -->
		<belief name="env" class="Environment">
			<fact>Environment.getInstance(null,null,null)</fact>
		</belief>

		<belief name="primera" class="Boolean">
			<fact>true</fact>
		</belief>

		<belief name="ahora" class="String">
			<fact>""</fact>
		</belief>
	</beliefs>

	<goals>
		<!-- Objetivo usado para crear el manager -->
		<achievegoalref name="cms_create_component">
			<concrete ref="cmscap.cms_create_component"/>
		</achievegoalref>

		<!-- Objetivo usado para destruir el manager -->
		<achievegoalref name="cms_destroy_component">
			<concrete ref="cmscap.cms_destroy_component"/>
		</achievegoalref>

		<performgoal name="usersManager" retry="true" exclude="never"/>
	</goals>

	<plans>
		<plan name="usersManager-plan">
			<body class="UsersManagerPlan"/>
			<trigger>
				<goal ref="usersManager"/>
			</trigger>
		</plan>
	</plans>
	
	<configurations>
		<configuration name="default">
			<goals>
				<initialgoal ref="usersManager"/>
			</goals>
		</configuration>
	</configurations>
</agent>