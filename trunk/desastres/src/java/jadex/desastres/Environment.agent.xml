<!--
  <h3>Entorno</h3>

  Agente que administra todos los agentes y/o eventos que hay en el mapa
-->

<agent xmlns="http://jadex.sourceforge.net/jadex" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	name="Environment" package="jadex.desastres">

	<imports>
		<import>jadex.runtime.*</import>
		<import>jadex.util.*</import>
		<import>java.util.logging.*</import>
	</imports>
	
	<beliefs>
		<belief name="env" class="Environment">
			<fact>Environment.getInstance(null,null,null)</fact>
		</belief>
	</beliefs>

	<plans>
		<plan name="terminar-plan">
			<body class="DetenerEntorno"/>
		</plan>
	</plans>

	<configurations>
		<configuration name="default">
			<plans>
				<endplan ref="terminar-plan"/>
			</plans>
		</configuration>
	</configurations>
</agent>