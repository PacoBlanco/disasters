<?xml version="1.0" encoding="UTF-8"?>
<!--
	<h3>Evacuacion.</h3>

	Agente que coordina la evacuacion de la residencia.
-->
<agent xmlns="http://jadex.sourceforge.net/jadex" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://jadex.sourceforge.net/jadex http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"	
		name="EvacuacionResidencia" package="disasters.caronte.evacuacion">
	<imports>
		<import>disasters.Position</import>
		<import>disasters.caronte.Entorno</import>
		<import>disasters.caronte.ontology.CaronteOntology</import>
		<import>jadex.base.fipa.IDF</import>
		<import>jadex.base.fipa.SFipa</import>
		<import>jadex.bdi.planlib.df.DF</import>
		<import>jadex.bridge.service.RequiredServiceInfo</import>
		<import>jadex.bridge.service.SServiceProvider</import>
		<import>jadex.commons.future.IFuture</import>
		<import>java.util.HashMap</import>
	</imports>

	<capabilities>
		<!--<capability name="procap" file="jadex.bdi.planlib.protocols.request.Request"/>-->
		<capability name="dfcap" file="jadex.bdi.planlib.df.DF"/>
	</capabilities>

	<beliefs>
		<belief name="env" class="Entorno">
			<fact>Entorno.getInstance(Entorno.EVACUACION, $scope.getAgentName(), $beliefbase.residencia)</fact>
		</belief>
		<belief name="residencia" class="Position">
			<fact>new Position(38.232272, -1.698925)</fact>
		</belief>
		<beliefset name="salidas" class="Position">
			<fact>new Position(38.232272, -1.698925)</fact>
			<fact>new Position(38.232272, -1.698925)</fact>
		</beliefset>
		<beliefset name="escaleras" class="Position">
			<fact>new Position(38.232272, -1.698925)</fact>
			<fact>new Position(38.232272, -1.698925)</fact>
		</beliefset>
		<belief name="numEae" class="int">
			<fact>0</fact>
		</belief>
		<beliefset name="eae" class="Integer"/>
		<belief name="atendiendo" class="HashMap">
			<fact>new HashMap()</fact>
		</belief>
	</beliefs>

	<goals>
		<!--<achievegoalref name="rp_initiate">
			<concrete ref="procap.rp_initiate"/>
		</achievegoalref>-->
		<achievegoalref name="df_search">
			<concrete ref="dfcap.df_search"/>
		</achievegoalref>
		<achievegoalref name="df_register">
			<concrete ref="dfcap.df_register"/>
		</achievegoalref>
		<achievegoalref name="df_deregister">
			<concrete ref="dfcap.df_deregister"/>
		</achievegoalref>
		
		<maintaingoal name="formarEquipoEvacuacion" retry="true" exclude="never">
			<maintaincondition>
				$beliefbase.eae.length &gt;= $beliefbase.numEae
			</maintaincondition>
		</maintaingoal>
		<achievegoal name="evacuarResidencia"/>
		<achievegoal name="trasladarHerido"/>
	</goals>

	<plans>
		<plan name="evacuarResidencia-plan">
			<body class="EvaluarResidenciaPlan"/>
			<trigger>
				<messageevent ref="evacuarCentro"/>
			</trigger>
		</plan>
		<plan name="formarEquipoEvacuacion-plan">
			<body class="FormarEquipoEvacuacionPlan"/>
			<trigger>
				<goal ref="formarEquipoEvacuacion"/>
			</trigger>
		</plan>
		<plan name="trasladarHerido-plan">
			<body class="TrasladarHeridoPlan"/>
			<trigger>
				<goal ref="trasladarHerido"/>
			</trigger>
		</plan>
	</plans>

	<events>
		<messageevent name="evacuarCentro" direction="receive" type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.REQUEST</value>
			</parameter>
			<match>$content instanceof String &amp;&amp; ((String)$content).startsWith("evacuarCentro")</match>
		</messageevent>
		<messageevent name="ack_evacuarCentro" direction="send" type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.INFORM</value>
			</parameter>
		</messageevent>
		
		<messageevent name="finEvacuacion" direction="send" type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.REQUEST</value>
			</parameter>
		</messageevent>
		<messageevent name="ack_finEvacuacion" direction="receive" type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.INFORM</value>
			</parameter>
			<match>$content instanceof String &amp;&amp; ((String)$content).startsWith("ack_finEvacuacion")</match>
		</messageevent>
		
		<messageevent name="vueltaCentro" direction="send" type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.REQUEST</value>
			</parameter>
		</messageevent>
		<messageevent name="ack_vueltaCentro" direction="receive" type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.INFORM</value>
			</parameter>
			<match>$content instanceof String &amp;&amp; ((String)$content).startsWith("ack_vueltaCentro")</match>
		</messageevent>
	</events>

	<properties>
		<property name="dfservice" class="IFuture">SServiceProvider.getService($scope.getServiceProvider(), IDF.class, RequiredServiceInfo.SCOPE_PLATFORM)</property>
	</properties>

	<configurations>
		<configuration name="default">
			<goals>
				<initialgoal ref="df_register">
					<parameter ref="description">
						<value>
							$properties.dfservice.createDFComponentDescription(null,
								$properties.dfservice.createDFServiceDescription("evacuacion-service", Entorno.EVACUACION, "GSI DIT UPM"))
 						</value>
					</parameter>
				</initialgoal>
				<initialgoal ref="formarEquipoEvacuacion"/>
				<endgoal ref="df_deregister"/>
			</goals>
		</configuration>
	</configurations>
</agent>